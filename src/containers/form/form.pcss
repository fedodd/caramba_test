/* $tcolor-black: #111111;
$tcolor-light: #999999; */

.label {
  position: relative;
  display: inline-flex;
  flex-direction: column;
  color: var(--tcolor-light);
  font-size: var(--fontSize-input);
  line-height: var(--lineHeight-input);
  height: 70px;
  width: 100%;
  outline: none;
  &.short {
    margin-right: 20px;
    & ~ & {
      margin-right: 0;
    }
    width: calc((100% - 20px) / 2 - 1px); /*20px - margin*/
  }

  &.wide {
    /* width: 100%;
    margin-right: 0; */
  }

  @media only screen and (min-width: 720px) {
  }
}

.input {
  border: 1px solid #dcdcdc;
  box-sizing: border-box;
  height: 40px;
  width: 100%;
  margin-right: 0;
  border-bottom-width: 2px;
  outline: none;
  transition: 0.6s;
  padding-left: 10px;

  &:focus,
  &:hover:focus {
    color: var(--tcolor-black);
    border-bottom-color: var(--tcolor-black);
    &::placeholder {
      color: transparent;
    }
  }

  &:hover {
    border-bottom-color: #c4092f;
    cursor: pointer;
  }
}

.inputTitle {
  order: -1;
  display: inline-block;
  margin-left: 10px;
  opacity: 0;
  margin-bottom: 5px;
  height: 30px;

  .input:focus + & {
    opacity: 1;
  }
}

.radioFieldset {
  padding: 0;
  border: 0;
  margin: 0;
  margin-top: 17px;
}

.radioTitle {
  margin-bottom: 5px;

  margin-left: 0;
  width: 100%;
  color: var(--tcolor-light);
  font-size: var(--fontSize-input);
  line-height: var(--lineHeight-input);
}

.radioGroup {
  margin-top: 6px; /*5px + 1px borders of radio*/
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.radio {
  position: absolute;
  cursor: pointer;
  width: 0;
  height: 0;
  opacity: 0;
}
.radioLabel {
  box-sizing: border-box;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: inline-block;
  margin-right: 24px;
  position: relative;
  border: 1px solid transparent;

  &::after {
    position: absolute;
    content: "";
    z-index: -1;
    width: 30px;
    height: 30px;
    top: -6px; /*5px our border on active+hover and 1px that transparent*/
    left: -6px;
    border-radius: 50%;
    background-color: white;
  }

  &:last-child {
    margin-right: 0;
  }

  &:hover,
  &:active {
    border-color: transparent;
    /* width: 25px;
    height: 25px; */
    /* border: 5px solid var(--carColor-border); */

    &::after {
      background-color: var(--carColor-border);
    }
    /* margin-right: 19px; */
    /* margin-top: 0px; */
  }
}
