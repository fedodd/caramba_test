.select {
  cursor: pointer;
  flex: 1;
  padding: 0 0.5em;
  border: 0;
  outline: 0;
  color: var(--tcolor-light);
  background: white;
  background-image: none;
  box-shadow: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  appearance: none;
  border: var(--border-input);
  cursor: pointer;
  border-bottom-width: 2px;
  padding-left: var(--padding-inputText);
}
