.container {
  position: relative;
  cursor: pointer;
  width: 100%;
  height: 100%;

  &::after {
    position: absolute;
    top: 18px;
    right: 17px;
    border: 6px solid transparent;
    border-top-color: var(--color-text_light);
    content: "";
    pointer-events: none;
  }

  &:hover::after {
    border-top-color: var(--color-text_black);
  }
}

.select {
  position: relative;
  z-index: 10;
  cursor: pointer;
  border: var(--border-input);
  border-top: none;
  color: var(--color-text_light);
  transition: color 0.3s ease, background-color 0.3s ease,
    border-bottom-color 0.3s ease;
}

.options {
  margin: 0;
  padding: 0;
  list-style: none;
  border: 0;
}

.option {
  cursor: pointer;
  margin: 0;
  padding: 0;
  padding-left: var(--padding-inputText);
  width: 100%;
  height: 26px;
  border: none;
  text-align: left;
  color: var(--color-text_light);
  background-color: white;

  &:hover,
  &:focus {
    color: var(--color-text_black);
  }
}

.is-selected {
  color: var(--color-text_black);
}
