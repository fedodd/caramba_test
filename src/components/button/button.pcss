.button {
  position: relative;
  display: inline-block;
  margin: 0;
  padding: 0;
  width: 150px;
  height: 40px;
  border: 0;
  border-radius: 3px;
  outline: none;
  font-size: 0;
  color: white;
  background-color: var(--color-button);
}

.button:hover {
  cursor: pointer;
}

.button:hover .button,
.button:focus .button {
  border-color: var(--color_active);
}
