.header {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80px;
  background-color: var(--color-bg_dark);
}

.logo {
  width: 297px;
  height: 63px;
  background-image: var(--logoUrl);

  @media only screen and (min-width: 720px) {
    width: 494px;
    height: 104px;
    background-image: var(--logoUrl-big);
  }
}
